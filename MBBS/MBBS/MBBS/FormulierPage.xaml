<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MBBS.FormulierPage"
             Title="MBBS"
             BackgroundColor="#e6e6e6">
  <ContentPage.Content>
    <ScrollView>
      <StackLayout>
        <Label x:Name="TestLabel"
                Text="Voorwoord"
               TextColor="#4d4d4d" />
        <Entry x:Name="VoorwoordEntry"
               TextColor="#4d4d4d"
               BackgroundColor="#ffffff" />
        <Label Text="Introductie"
               TextColor="#4d4d4d"/>
        <Entry x:Name="IntroductieEntry"
               TextColor="#4d4d4d"
               BackgroundColor="#ffffff"
               IsPassword="true" />
        <Label Text="Toetsing"
               TextColor="#4d4d4d"/>
        <Entry x:Name="ToetsingEntry"
               TextColor="#4d4d4d"
               BackgroundColor="#ffffff"
               IsPassword="true" />
        <Label Text="Programma"
               TextColor="#4d4d4d"/>
        <Entry x:Name="ProgrammaEntry"
               TextColor="#4d4d4d"
               BackgroundColor="#ffffff"
               IsPassword="true" />
        <Button Text="Verstuur beoordeling"
                BackgroundColor="#003788"
                BorderWidth="0"
                BorderRadius="0" />
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>